<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/product_card_shape"
            android:padding="8dp">


            <TextView
                android:id="@+id/cart_item_quantity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="1"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/cart_imgbtn_minus"
                app:layout_constraintEnd_toStartOf="@+id/cart_imgbtn_minus"
                app:layout_constraintTop_toTopOf="@+id/cart_imgbtn_minus" />

            <ImageButton
                android:id="@+id/cart_imgbtn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/add_to_cart_design"
                android:src="@drawable/add_icon"
                app:layout_constraintBottom_toBottomOf="@+id/cart_item_quantity_tv"
                app:layout_constraintEnd_toStartOf="@+id/cart_item_quantity_tv"
                app:layout_constraintTop_toTopOf="@+id/cart_item_quantity_tv" />

            <ImageButton
                android:id="@+id/cart_imgbtn_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/add_to_cart_design"
                android:src="@drawable/minus_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/cart_imgbtn_delet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:src="@drawable/delet_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cart_imgbtn_minus"
                app:layout_constraintStart_toStartOf="@+id/cart_imgbtn_add"
                app:layout_constraintTop_toBottomOf="@+id/cart_imgbtn_minus" />

            <TextView
                android:id="@+id/cart_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5"
                android:textColor="#31BD11"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cart_item_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/cart_item_name"
                app:layout_constraintTop_toBottomOf="@+id/cart_item_name" />

            <TextView
                android:id="@+id/cart_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Cartep"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/cart_item_price"
                app:layout_constraintStart_toEndOf="@+id/cart_img"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cart_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/history"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>

